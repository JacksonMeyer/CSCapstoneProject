#: import utils kivy.utils


<PhotoScreen>:
    FloatLayout:                #specifys the sizes of everything on the page

        GridLayout:             #image layout for title
            rows: 1
            pos_hint: {"top": .98, "left": 1}
            size_hint: .2, .2
            Image:
                source: "icons/icons8-satisfaction-48.png"

        Label:                 #layout for title
            pos_hint: {"top": .98, "left": 1}
            size_hint: 1, .2
            font_size: 30
            text: "Capture Your Feelings!"

        GridLayout:            #image layout for title
            rows: 1
            pos_hint: {"top": .98, "right": 1}
            size_hint: .2, .2
            Image:
                source: "icons/icons8-satisfaction-48.png"

        GridLayout:         #layout for happy face
            rows: 1
            pos_hint: {"top": .75, "left": 1}
            size_hint: .2, .1
            ButtonImage:
                source: "icons/icons8-happy-50.png"
                on_release:
                    app.change_screen("playlist_screen")

        Label:              #layout for happy
            pos_hint: {"top": .68, "left": 1}
            size_hint: .2, .1
            text: "Happy"

        GridLayout:         #layout for angry face
            rows: 1
            pos_hint: {"top": .75, "left": 1}
            size_hint: .2, .5
            ButtonImage:
                source: "icons/icons8-angry-50.png"
                on_release:
                    app.change_screen("playlist_screen")

        Label:              #layout for angry
            pos_hint: {"top": .68, "left": 1}
            size_hint: .2, .5
            text: "Angry"

        GridLayout:         #layout for sad face
            rows: 1
            pos_hint: {"top": .75, "left": 1}
            size_hint: .2, .9
            ButtonImage:
                source: "icons/icons8-sad-50.png"
                on_release:
                    app.change_screen("playlist_screen")


        Label:              # layout for sad
            pos_hint: {"top": .68, "left": 1}
            size_hint: .2, .9
            text: "Sad"


        GridLayout:         #layout for calm
            rows: 1
            pos_hint: {"top": .75, "right": 1}
            size_hint: .2, .1
            ButtonImage:
                source: "icons/icons8-meditation-50.png"
                on_release:
                    app.change_screen("playlist_screen")

        Label:              #layout for calm label
            pos_hint: {"top": .68, "right": 1}
            size_hint: .2, .1
            text: "Calm"


        GridLayout:         #layout for energetic
            rows: 1
            pos_hint: {"top": .75, "right": 1}
            size_hint: .2, .5
            ButtonImage:
                source: "icons/icons8-exercise-50.png"
                on_release:
                    app.change_screen("playlist_screen")

        Label:              #layout for energetic label
            pos_hint: {"top": .68, "right": 1}
            size_hint: .2, .5
            text: "Energetic"


        GridLayout:         #layout for dancing
            rows: 1
            pos_hint: {"top": .75, "right": 1}
            size_hint: .2, .9
            ButtonImage:
                source: "icons/icons8-dancing-50.png"
                on_release:
                    app.change_screen("playlist_screen")

        Label:              #layout for dance label
            pos_hint: {"top": .68, "right": 1}
            size_hint: .2, .9
            text: "Dance"

        Label:              #layout for label
            pos_hint: {"top": .42, "left": 1}
            size_hint: 1, .7
            font_size: 30
            text: "Be Yourself!"

        GridLayout:             #image layout for home
            rows: 1
            pos_hint: {"top": .20, "left": 1}
            size_hint: .2, .2
            ButtonImage:
                source: "icons/icons8-home-40.png"
                on_release:
                    app.change_screen("start_screen")

        GridLayout:            #image layout for settings
            rows: 1
            pos_hint: {"top": .20, "right": 1}
            size_hint: .2, .2
            ButtonImage:
                source: "icons/icons8-settings-40.png"
                on_release:
                    app.change_screen("settings_screen")






        GridLayout:         #layout for button to generate playlist
            rows: 1
            pos_hint: {"top": .5, "left": .5}
            size_hint: 1, .5
            ButtonImage:
                source: "icons/icons8-lounge-music-playlist-64.png"
                on_release:
                    app.take_pic()
                    app.change_screen("playlist_screen")

